<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<VBox fx:id="mainVBox" maxHeight="Infinity" maxWidth="Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.dmotyka.cryptonose2.controllers.CryptonoseGuiExchangeController">
   <children>
      <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="7.0" VBox.vgrow="NEVER">
         <children>
            <Label style="-fx-font-weight: bold;" text="Connection status">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="connectionStatusLabel" text="disconnected" />
            <Label layoutX="10.0" layoutY="10.0" style="-fx-font-weight: bold;" text="Last update">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="lastTradeLabel" layoutX="282.0" layoutY="10.0" text="no updates yet" />
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
         </VBox.margin>
      </HBox>
      <HBox fx:id="tableDisabledHbox" alignment="CENTER" fillHeight="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" VBox.vgrow="ALWAYS">
         <children>
            <TextFlow textAlignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Table disabled in power saving mode" textAlignment="CENTER" textOrigin="CENTER" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextFlow>
         </children>
      </HBox>
      <TableView fx:id="currenciesTableView" focusTraversable="false" maxHeight="Infinity" maxWidth="Infinity" prefHeight="400.0" VBox.vgrow="ALWAYS">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <TitledPane fx:id="logTitledPane" animated="false" collapsible="false" maxHeight="Infinity" maxWidth="Infinity" prefHeight="200.0" VBox.vgrow="ALWAYS">
         <graphic>
            <Label text="Log">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
         </graphic>
         <content>
            <TextArea fx:id="consoleTextArea" editable="false" wrapText="true" />
         </content>
      </TitledPane>
      <TitledPane animated="false" collapsible="false" VBox.vgrow="NEVER">
         <content>
            <HBox alignment="CENTER_LEFT" fillHeight="false" nodeOrientation="LEFT_TO_RIGHT" spacing="7.0">
               <children>
                  <Label text="On alert: ">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <CheckBox fx:id="soundCheckBox" mnemonicParsing="false" selected="true" text="Sound" />
                  <CheckBox fx:id="runBrowserCheckBox" mnemonicParsing="false" text="Browser" />
                  <CheckBox fx:id="notificationCheckBox" mnemonicParsing="false" selected="true" text="Notification" />
                  <Region HBox.hgrow="ALWAYS" />
                  <CheckBox fx:id="showLogCheckBox" mnemonicParsing="false" text="Show Log" />
                  <Button fx:id="pairsButton" mnemonicParsing="false" text="Pairs..." />
                  <Button fx:id="alertSettingsButton" mnemonicParsing="false" text="Alert conditions..." />
               </children>
            </HBox>
         </content>
         <graphic>
            <Label text="Exchange options">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
         </graphic>
      </TitledPane>
   </children>
</VBox>
